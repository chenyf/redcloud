{% extends '@User/Settings/layout.html.twig' %}
{% block title %}支付密码 - 安全设置 - {{ parent() }}{% endblock %}
{% set script_controller = 'settings/update_pay_password' %} 
{% set side_nav = 'security' %} 

{% block main %} 
 {% embed "@Home/Bootstrap/panel.html.twig" with {class:'panel-col'} %}
    {% block heading %}安全设置{% endblock %}
    {% block body %}

      <ul class="breadcrumb">
        <li><a href="{{ path('settings_security') }}">安全设置</a></li>
        <li class="active">找回支付密码</li>
      </ul> 

    {#{ web_macro.flash_messages() }#} 
{% if returnRes.message != '' %}<div class="alert alert-{{returnRes.res}}">{{ returnRes.message }}</div>{% endif %}
      <form id="pay-password-reset-update-form" class="form-horizontal" method="post" action="{{ path('settings_update_pay_password') }}">

        {{ web_macro.flash_messages() }}

        <div class="form-group">
          <div class="col-md-3 control-label">
            {#{ form_label(form.payPassword, '新支付密码') }#}
                  <label for="form_payPassword" class="required">新支付密码</label>
          </div>
          <div class="col-md-8 controls">
            {#{ form_widget(form.payPassword, {attr:{class:'form-control'}}) }#}
            <input type="password" id="form_payPassword" name="form[payPassword]" required="required" class="form-control" data-widget-cid="widget-1" data-explain="请输入支付密码">
            <p class="help-block">请输入支付密码</p>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-3 control-label">
            {#{ form_label(form.confirmPayPassword, '确认支付密码') }#}
                  <label for="form_confirmPayPassword" class="required">确认支付密码</label>
          </div>
          <div class="col-md-8 controls">
            {#{ form_widget(form.confirmPayPassword, {attr:{class:'form-control'}}) }#}
            <input type="password" id="form_confirmPayPassword" name="form[confirmPayPassword]" required="required" class="form-control" data-widget-cid="widget-2" data-explain="请再输入一次支付密码">
            <p class="help-block">请再输入一次支付密码</p>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-3 control-label">
            {#{ form_label(form.currentUserLoginPassword, '用户登录密码') }#}
                  <label for="form_currentUserLoginPassword" class="required">用户登录密码</label>
          </div>
          <div class="col-md-8 controls">
            {#{ form_widget(form.currentUserLoginPassword, {attr:{class:'form-control'}}) }#}
                  <input type="password" id="form_currentUserLoginPassword" name="form[currentUserLoginPassword]" required="required" class="form-control">
            <p class="help-block">请输入用户登录密码</p>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-3 col-md-8">
            {#{ form_rest(form) }#}
                  <input type="hidden" id="form__token" name="form[_token]" value="44dff1dad268cbb411b3706270c3a469f99647fd">
            <button  id="payPassword-save-btn" type="submit" class="btn btn-primary">重设支付密码</button>
          </div>
        </div>

        <input type="hidden" name="token" value="{{ token.token }}">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">

      </form>    


    {% endblock %}
  {% endembed %}
{% endblock %}