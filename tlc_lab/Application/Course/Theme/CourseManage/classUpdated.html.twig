{% set menu = 'class' %}

{% set script_controller = 'course-manage/class-updated' %}

{% extends "@Course/CourseManage/courseLayout.html.twig" %}

{% block title %}编辑授课班 - {{ parent() }}{% endblock %}

{% block side %}
     <div class="t-course-handle">
         <div class="t-add-content pull-right">
             <a href="{{ U('Course/CourseManage/class',{id:course.id,center:app.request.get('center')}) }}" class="btn btn-link btn-sm ajaxLoad"><i class="fa fa-reply mrs"></i>返回授课班管理</a>
         </div>
     </div>
{% endblock %}

{% block courseContent %}

<div class="panel panel-default panel-col">
    
    <div class="panel-body">
        <form id="class-updated-form" class="form-horizontal" method="post" action="{{ path('course_manage_class_updated', {id:class.id,courseId:course.id,center:app.request.get('center')}) }}">

            <div class="row form-group">
                <div class="col-md-3 control-label">
                    <label for="class_name">班级名称</label>
                </div>
                <div class="col-md-6 controls">
                    <input type="text" id="class_name" name="className" class="form-control" placeholder="请输入班级名称" value="{{class.className}}" />
                </div>
            </div>

            <div class="row form-group">
                <div class="col-md-3 control-label">
                    <label for="status">授课班状态</label>
                </div>
                <div class="col-md-6 controls">
                    <label class="radio-inline">
                        <input type="radio" name="status" id="optionsRadios1" value="0" {% if class.status == 0 %} checked {% endif %} />未授课
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="status" id="optionsRadios1" value="1" {% if class.status == 1 %} checked {% endif %} />授课中
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="status" id="optionsRadios1" value="2" {% if class.status == 2 %} checked {% endif %} />结束授课
                    </label>
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
            
            <div class="row form-group">
                <div class="col-md-offset-3 col-md-6 controls">
                    
                    <button id="class-updated-form-submit" class="btn btn-fat btn-primary" type="submit" data-toggle="form-submit" data-target="#class-create-form" data-goto="{{path('course_manage_class', {id:course.id,center:app.request.get('center')})}}" data-submiting-text="正在保存..." >保存</button>
                    <a href="{{path('course_manage_class', {id:course.id,center:app.request.get('center')})}}" class="btn btn-link  ">返回</a>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}
{% block footer %}
<script>
    app.load('course-manage/class-updated');
</script>
{% endblock %}