{% extends '@Home/bootstrap-modal-layout.html.twig' %}
{% set menu = 'generalize' %}
{% set script_controller = 'generalize/admin-index' %}
{% block title %}添加用户等级{% endblock %}
{% block body %}

<form id="create-form" class="form-horizontal" method="post" 
{% if Generalize.id  %} 
      action="{{ U('Generalize/edit',{ id:Generalize.id }) }}"
{% endif %} >
    <div class="row form-group">
      <div class="col-md-3 control-label">
        <label for="levelId">等级标题</label>
      </div>
      <div class="col-md-7 controls">
        <input type="text" id="levelId" name="levelId" class="form-control" value="{{ Generalize.levelId }}">
        <span style="color:red">注意：</span>等级：1时，第一级；2时，第二级...
      </div>
    </div>
    <!--<div class="row form-group">
        <div class="col-md-3 control-label">
         <label for="status">状态</label>
       </div>
        <div class="col-md-7 controls">
          <input type="text" id="status" name="status" class="form-control" value="{{ Generalize.status }}">
          <span style="color:red">注意：</span>状态：1时，代表禁止；0时，代表未禁止！
        </div>
        <div id="re"></div>
    </div>  -->   
</form>
{% endblock %}

{% block footer %}
  <button id="create-btn" data-submiting-text="正在提交" type="submit" class="btn btn-primary pull-right" data-toggle="form-submit" data-target="#create-form">提交</button>
  <button type="button" class="btn btn-link pull-right" data-dismiss="modal">取消</button>
  <script> app.load('generalize/generalize')</script>
{% endblock %}