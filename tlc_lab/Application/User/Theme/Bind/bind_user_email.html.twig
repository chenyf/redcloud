{% extends '@User/Bind/bind_layout.html.twig' %}

{% block title %}绑定邮箱 - {{ parent() }}{% endblock %}

{% set tab_nav = 'bind_email' %}

{% block main_content %}

    <div class="empty-center" style="color: #060606;padding: 100px 0px;width: 60%;margin-left: 20%;">
        <form id="bind_form" class="form-vertical" method="POST">
            <input type="hidden" name="bind_type" value="email" />
            <div class="form-group" style="overflow:hidden;">
                <label class="col-md-3 control-label con-tit" for="bind_email">邮箱:</label>
                <div class="col-md-8 controls ">
                    <input type="text" class="form-control" data-url="{{path('register_email_check')}}" required="required" name="email" id="bind_email" data-widget-cid="widget-6" autocomplete="off">
                </div>
            </div>
            <div class="form-group" style="overflow:hidden;">
                <label class="col-md-3 control-label required con-tit" for="sms_code">邮件验证码:</label>
                <div class="col-md-8 controls" style="padding:0;">
                    <div class="col-md-6 controls" style="">
                        <input type="text" class="form-control" id="mail-code" name="mail_code" data-explain="输入邮件验证码" maxlength="5" required="required" data-url="{{ path('email_code_check',{type:'account_bind'}) }}" autocomplete="off">
                        <p class="help-block"></p>
                    </div>
                    <div class="col-md-6">
                        <span class="btn btn-default btn-block js-email-send" data-url="{{ path('send_email_code') }}" data-widget-cid="widget-6">
                            <span id="js-time-left-email"></span>
                            <span id="js-fetch-btn-text-email" style="font-size:12px;">获取邮件验证码</span>
                        </span>
                    </div>
                </div>
            </div>
            <button id="sure_to_submit" type="submit" class="btn btn-danger" data-url="{{ path('bind_email') }}" data-goto="{{ path('logout') }}" data-target="#bind_form">确认绑定该邮箱</button>
        </form>
    </div>

{% endblock %}