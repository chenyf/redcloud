{% extends '@Course/CourseManage/layout.html.twig' %}

{% block title %}价格设置 - {{ parent() }}{% endblock %}

{% set side_nav = 'ratio' %}
{% set script_controller = 'course-manage/ratio' %}
{% block main %}

<div class="panel panel-default panel-col">
    <div class="panel-heading">老师设置
    </div>
    <div class="panel-body">
        <form class="form-horizontal" id="price-form" method="post" action="{{U('Course/CourseManage/ratio',{id:course.id,center:app.request.get('center')})}}" data-cashrate="{{cashRate}}">
            <div class="form-group" >
                <div class="col-md-2 control-label">
                    <label for="price">老师提成</label>
                </div>
                <div class="col-md-8 controls">
                    <input type="text" id="ratio" name="ratio" class="form-control" value="{{course.ratio}}"  data-cashrate="1">
                </div>
            </div>
            <div class="form-group" >
                <div class="col-md-2 control-label">
                    <label for="price">学校提成</label>
                </div>
                <div class="col-md-8 controls">
                    <input type="text" id="deduct" name="deduct" class="form-control" value="{{course.deduct}}" data-cashrate="1">
                </div>
            </div>
             <input type="hidden" id="redcloudDeduct" name="redcloudDeduct" class="form-control" value="{{course.redcloudDeduct}}"  data-cashrate="1">
            <div class="form-group" >
                <div class="col-md-2 control-label">
                    <label for="price">渠道提成</label>
                </div>
                <div class="col-md-8 controls">
                    <input type="text" id="qdeduct" name="qdeduct" class="form-control" value="{{course.qdeduct}}" data-cashrate="1">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-8 controls">
                    <button class="btn btn-fat btn-primary" id="price-save-btn" type="submit"  >保存</button>
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">

        </form>

    </div>
</div>

{% endblock %}