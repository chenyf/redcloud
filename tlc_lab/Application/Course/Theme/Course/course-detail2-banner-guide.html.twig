                    </div>

                    <div class="title display-3-text">{{ course.title }}</div>
                    <div class="partner-title body-1-text bt3-visible-xs align-horizontal-center">
                        {% for tag in tags %}
                            <a href="{{ path('tag_show', {name:tag.name}) }}" class="mrs">{{ tag.name }}</a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
