{% extends '@BackManage/Course/layout.html.twig' %}

{% block title %}课程分类管理 - {{ parent() }}{% endblock %}

{% set script_controller = 'course/course-category' %}

{% set menu = 'course-category-manage' %}

{% block main %}

    <div class="page-header">
        <a href="#modal" data-toggle="modal" data-url="{{ path('admin_category_manage_base', {id:0,create:1}) }}" class="btn btn-info btn-sm pull-right" target="_blank">创建课程分类</a>
        <h1>课程分类管理</h1>
    </div>

    <table class="table table-striped table-hover text-center" id="course-table" style="word-break:break-all;">
        <thead>
        <tr>
            <th>ID</th>
            <th width="30%">名称</th>
            <th>分类代码</th>
            <th>课程编号前缀</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        {% for cate in categorys %}
            <tr id="category-tr-{{ cate.id }}">
                <td>{{ cate.id }}</td>
                <td>{{ cate.name }}</td>
                <td>{{ cate.code }}</td>
                <td>{{ cate.courseCode }}</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm" href="#modal" data-toggle="modal" data-url="{{ path('admin_category_manage_base', {id:cate.id,create:0}) }}">编辑</a>
                        <a href="#" type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a class="remove-category" href="#modal" data-toggle="modal" data-url="{{ path('admin_category_manage_remove', {id:cate.id}) }}"><span class="glyphicon glyphicon-trash"></span> 删除分类</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="20"><div class="empty">暂无分类记录</div></td></tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}