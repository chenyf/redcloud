<form id="password-reset-by-mobile-form" class="form-vertical" action="{{ path('password_reset_by_sms') }}" method="post" >
    
    <div class="form-group" style="overflow:hidden;">
        <label class="col-md-3 control-label required con-tit" for="mobile">手机号:</label>
        <div class="col-md-8 controls">
            <input type="text" id="mobile" name="mobile"  class="form-control" data-role="mobile" data-url="/User/PasswordReset/checkMobileAction">
        </div>
    </div>
        
    <div class="form-group" style="overflow:hidden">
        <label class="col-md-3 control-label required con-tit" for="captcha_num">验证码:</label>
        <div class="col-md-8 controls">
            <div class="col-md-5 col-sm-5 col-xs-5" style="padding:0">
                 <input type="text" class="form-control" id="captcha_num" name="captcha_num" maxlength="5"  data-url="{{path('register_captcha_check')}}">
                <p class="help-block"></p>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-6 mls">
                <img src="{{ path('register_captcha_num') }}" data-url="{{ path('register_captcha_num') }}" id="getcode_num" title="看不清，点击换一张" style="width:110px;height:32px;cursor:pointer;" >
                <i class="fa fa-refresh mll" style="cursor:pointer;font-size:20px;color:#666;" title="看不清，点击换一张"></i>
            </div>
        </div>
    </div>
    
    <div class="form-group" style="overflow:hidden;">
        <label class="col-md-3 control-label required con-tit" for="sms_code">短信验证码:</label>
        <div class="col-md-8 controls" >
            <div class="col-md-5 col-sm-5 col-xs-5" style="padding:0" >
                <input type="text" class="form-control" id="sms-code" name="sms_code" maxlength="5" required="required" data-url="{{path('sms_code_check',{type:'sms_forget_password'})}}">
                <p class="help-block"></p>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-6 mls">
                <span class="btn btn-default btn-block js-sms-send" data-url="{{ path('send_sms_code') }}">
                    <span id="js-time-left"></span>
                    <span id="js-fetch-btn-text" style="font-size:12px;">获取短信验证码</span>
               </span>
            </div>           
        </div>
    </div>
    
    <div class="form-group" style="overflow:hidden;">
        <label class="col-md-3 control-label required con-tit" for="password">请设置新密码:</label>
        <div class="col-md-8 controls">
            <input type="password" id="password" name="password"  class="form-control" >
        </div>
    </div>
    

    <div class="form-group" style="overflow:hidden;">
        <div class="controls">
            <button type="submit" class="btn btn-primary login-again btn-block" data-loading-text="提交中..." style="width:200px">重置密码</button>
        </div>
    </div>
    
</form>