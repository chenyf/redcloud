  <form id="login-form" class="form-vertical" style="margin:0 40px" data-url="{{ path('check_login') }}" data-trigger="{{ trigger|default('') }}" data-goto="{% if goto_url %}{{ goto_url }}{% else %}{{ path('my') }}{% endif %}">
    <div class="form-group dl-box">
        <div class="input-group w-100">
            <input type="text" class="login-form-input login-input-normal" id="login_username" name="username"  placeholder="请输入教师工号/学号" aria-describedby="basic-addon1" >
        </div>
        <p class="help-block glyphicon hide" style="color:#a94442;margin-top:10px;">
            <i class="glyphicon pull-left"></i>
            <span class="text-danger mls"></span>
        </p>
    </div>
    <div class="form-group dl-box">
        <div class="input-group w-100">
            <input type="password" class="login-form-input login-input-normal" id="login_password" name="password"  placeholder="请输入密码" aria-describedby="basic-addon1">
        </div>
        <p class="help-block glyphicon hide" style="color:#a94442;margin-top:10px;">
            <i class=" glyphicon pull-left"></i>
            <span class="text-danger mls"></span>
        </p>
    </div>
    <div class="form-group dl-box {% if errorNum < 3 %}hide{% endif %}" data-errornum="{{errorNum}}">
        <div class="controls row">
            <div class="col-md-6 col-sm-6 col-xs-6" >
                <input type="text" class="login-form-input login-input-normal" placeholder="请输入验证码" id="captcha_num" name="captcha_num" maxlength="5"  data-url="{{path('register_captcha_check')}}">
                <p class="help-block glyphicon hide" style="color:#a94442;margin-top:10px;">
                    <i class=" glyphicon pull-left"></i>
                    <span class="text-danger mls"></span>
                </p>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-4">
                <img src="{{ path('register_captcha_num') }}" data-url="{{ path('register_captcha_num') }}" id="getcode_num" title="看不清，点击换一张" style="max-width:100%;height:32px;cursor:pointer;" >
            </div>
            <div class="col-md-2 col-sm-2 col-xs-2">
                <i class="fa fa-refresh" style="cursor:pointer;font-size:20px;color:#666;margin-top:5px;"></i>
            </div>
        </div>
    </div>
    <div class="form-group dl-box">
        <div class="controls">
            <button type="button" class="pull-right login-form-btn login-form-btn-danger" id="login-btn">登录</button>
            <span class="checkbox mtm pull-left">
                <label style="display:inline;font-size:12px;color:#666;"> <input type="checkbox" name="remember" id="login_remember"> 记住密码 </label>
            </span>
        </div>
    </div>
</form>