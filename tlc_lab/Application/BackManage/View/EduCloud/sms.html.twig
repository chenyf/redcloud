{% extends '@BackManage/CloudSetting/layout.html.twig' %}

{% block title %}云短信 - {{ parent() }}{% endblock %}

{% set submenu = 'sms' %} 
{% set script_controller = 'educloud/sms-setting' %}

{% block maincontent %}
<div class="page-header"><h1>云短信</h1></div>
  	{% for type, flashMessages in info%}
      <div class="alert alert-{{ type }}">{{ flashMessages[0]}}</div>
    {% endfor %}
<form class="form-horizontal" id="cloud-setting-form" method="post" novalidate>
  

    <div class="row form-group">
        <div class="col-md-3 control-label">
            <label for="cloud_bucket" >云短信账号</label>
        </div>
        <div class="controls col-md-8 radios">
            <input type="text" id="sms_user" class="form-control" name="sms_user" value="{{settingInfo['sms_user']}}">
        </div>
    </div>

    <div class="row form-group">
        <div class="col-md-3 control-label">
            <label for="cloud_bucket" >云短信密码</label>
        </div>
        <div class="controls col-md-8 radios">
            <input type="text" id="sms_password" class="form-control" name="sms_password" value="{{settingInfo['sms_password']}}">
        </div>
    </div>

    <hr>
    <div class="row form-group">
        <div class="col-md-3 control-label"></div>
        <div class="controls col-md-8">
            <button type="submit" class="btn btn-primary">提交</button>
        </div>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
</form>

{% endblock %}