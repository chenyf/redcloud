{% extends '@Home/bootstrap-modal-layout.html.twig' %}

{% set menu = 'cms' %}

{% block title %}创建着陆页{% endblock %}
{% block body %}

<form id="create-form" class="form-horizontal" method="post" 
{% if CmsList.id  %} 
      action="{{ U('Cms/edit',{ id:CmsList.id }) }}" 
{% else %}  
      action="{{ U('Cms/create') }}" 
{% endif %} >
  <div class="row form-group">
    <div class="col-md-3 control-label">
      <label for="title">标题</label>
    </div>
    <div class="col-md-7 controls">
      <input type="text" id="title" name="title" class="form-control" placeholder="必填，请输入两位字符" value="{{ CmsList.title }}">
    </div>
  </div>
  <div class="row form-group">
    <div class="col-md-3 control-label">
      <label for="keywords">关键字</label>
    </div>
    <div class="col-md-7 controls">
      <input type="text" id="keywords" name="keywords" class="form-control" placeholder="必填，请输入五位字符" value="{{ CmsList.keywords }}">
    </div>
  </div>
    <div class="row form-group">
        <div class="col-md-3 control-label">
         <label>描述</label>
       </div>
        <div class="col-md-7 controls">
            <textarea id="description" name="description" rows="8" class="form-control" placeholder="选填，最多可输入500字">{{ CmsList.description }}</textarea>  
        </div>
        <div id="re"></div>
    </div>       
</form>
{% endblock %}

{% block footer %}
  <button id="create-btn" data-submiting-text="正在提交" type="submit" class="btn btn-primary pull-right" data-toggle="form-submit" data-target="#create-form">提交</button>
  <button type="button" class="btn btn-link pull-right" data-dismiss="modal">取消</button>
  <script> app.load('cms/create_list')</script>
{% endblock %}