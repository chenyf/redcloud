{% extends '@BackManage/System/layout.html.twig' %}

{% block title %}app 配置管理 - {{ parent() }}{% endblock %}

{#{% set script_controller = 'mobile/list' %}#}

{% set menu = 'app_config' %}

{% block main %}
    <div class="page-header clearfix">
        <button class="btn btn-info btn-sm pull-right" id="add-navigation-btn" data-toggle="modal" data-target="#modal" data-url="{{ path('mobile_config_create') }}"><span class="glyphicon glyphicon-plus"></span> 添加配置</button>
        <h1 class="pull-left">app 配置管理</h1>
    </div>
    <ul class="nav nav-tabs mbl">
        <li class="active"><a href="{:U('?id='.$key)}" >全部 </a></li>
        <li ><a href="{:U('?id='.$key)}">首页 </a></li>

    </ul>
    <div id="aticle-table-container">
        <table class="table table-hover table-striped" id="article-table">
            <tr>
                <th>ID</th>
                <th>名称</th>
                <th>标题</th>
                <th>分组</th>
                <th>类型</th>
                <th>状态</th>
                <th>操作</th>
            </tr>
            {% if list %}
                {% for config in list %}
                    {% include '@BackManage/MobileConfig/config-tr.html.twig' %}
                {% endfor %}
            {% else %}
                <tr><td colspan="20"><div class="empty">暂无页面记录</div></td></tr>
            {% endif %}
        </table>
    </div>
    {{ web_macro.paginator(paginator) }}
{% endblock %}