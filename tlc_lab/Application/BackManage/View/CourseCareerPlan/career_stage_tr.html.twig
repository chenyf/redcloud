{% import "@BackManage/macro.html.twig" as admin_macro %}

<tr id="stage-tr-{{ stage.id }}">
    <td class="td-center">{{ stage.id }}</td>
    <td class="td-center">
        {{ stage.name }}
    </td>
    <td class="td-center">
        {{ stage.courses|length }}
    </td>
    <td class="td-center">
        <span class="text-muted text-sm">{{ stage.createdTime|date('Y-n-d H:i') }}</span>
    </td>
    <td class="td-center">
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="#modal" data-toggle="modal" data-url="{{ path('admin_career_course_plan_base', {id:stage.id,create:0,type:1,cid:career.id}) }}">编辑</a>

            <a href="#" type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu pull-right">
                <li><a class="remove-stage" data-id="{{ stage.id }}" data-url="{{ path('admin_career_course_plan_remove') }}" href="javascript;"><span class="glyphicon glyphicon-remove-circle"></span>删除</a></li>
            </ul>
        </div>
    </td>
</tr>
