{% extends '@Home/bootstrap-modal-layout.html.twig' %}

{% set menu = 'cms' %}

{% block title %}统计代码{% endblock %}
{% block body %}

<form id="create-form" class="form-horizontal" method="post" action="{{ U('Cms/total',{ id:id }) }}">
    <div class="row form-group">
        <div class="col-md-3 control-label">
         <label>代码</label>
       </div>  
        <div class="col-md-7 controls">
            <textarea id="description" placeholder="请输入您要统计的代码,最多可输入500字" name="statisticalCode" rows="8" class="form-control">{{ row.statisticalCode }}</textarea>
        </div>
            <div id="re"></div>
    </div> 
    
</form>
{% endblock %}

{% block footer %}
  <button id="create-btn" data-submiting-text="正在提交" type="submit" class="btn btn-primary pull-right" data-toggle="form-submit" data-target="#create-form">提交</button>
  <button type="button" class="btn btn-link pull-right" data-dismiss="modal">取消</button>
  <script>app.load('cms/list')</script>
{% endblock %}