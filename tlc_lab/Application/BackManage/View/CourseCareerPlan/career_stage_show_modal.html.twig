{% extends '@Home/bootstrap-modal-layout.html.twig' %}

{% set modalSize = 'large' %}

{% block title %}查看职业课程阶段{% endblock %}
{% block body %}

    <table class="table table-striped table-condenseda table-bordered">
        <thead>
        <tr>
            <th>编号</th>
            <th width="30%">名称</th>
            <th>课程数</th>
            <th>创建时间</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
            {% for stage in career.stages %}
                {% include '@BackManage/CourseCareerPlan/career_stage_tr.html.twig' with {stage:stage,career:career} %}
            {% else %}
                <tr><td colspan="20"><div class="empty">暂无职业记录</div></td></tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block footer %}
    <button type="button" class="btn btn-info pull-right" data-dismiss="modal">关闭</button>
{% endblock %}