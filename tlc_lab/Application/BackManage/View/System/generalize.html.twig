{% extends '@BackManage/System/operation.layout.html.twig' %}

{% block title %}推广设置 - {{ parent() }}{% endblock %}
{% set script_controller = 'system/generalize' %}
{% set submenu = 'generalize' %}
{% block maincontent %}

<div class="page-header"><h1>推广设置</h1></div>

{{ web_macro.flash_messages() }}

<form class="form-horizontal" method="post" id="mailer-form" novalidate>
  <div class="row form-group">
    <div class="col-md-3 control-label">
      <label >推广功能</label>
    </div>
    <div class="controls col-md-8 radios">
      {{ radios('enabled', {1:'开启', 0:'关闭'}, generalize.enabled) }}
    </div>
  </div>
  <div class="row form-group">
    <div class="col-md-3 control-label"></div>
    <div class="controls col-md-8">
      <button type="submit" class="btn btn-primary">提交</button>
    </div>
  </div>
</form>

{% endblock %}