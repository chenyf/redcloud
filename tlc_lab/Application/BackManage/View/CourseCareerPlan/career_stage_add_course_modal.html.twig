{% extends '@Home/bootstrap-modal-layout.html.twig' %}

{% set modalSize = 'large' %}

{% block title %} 阶段添加课程 {% endblock %}
{% block body %}
    <div class="page-body">
        <div id="course-search-form" class="form-inline well well-sm" action="" method="POST" novalidate>
            <div class="form-group">
                <select style="max-width:150px;" class="form-control" id="course_cate" name="course_cate">
                    {{ select_options(category_choices('course'), 0, '课程分类') }}
                </select>
            </div>
            <div class="form-group">
                <input type="text" id="course_name" name="course_name" class="form-control" placeholder="课程名称">
            </div>
            <div class="form-group">
                <input type="text" id="course_number" name="course_number" class="form-control" placeholder="课程编号" style="width: 150px;">
            </div>
            <button class="btn btn-primary" id="course-search-btn" data-url="{{ path('admin_career_course_plan_retrieve_course') }}">搜索</button>
        </div>
        <table id="course-search-result-table" class="table table-striped table-hover table-center">
            <thead>
                <tr>
                    <th>编号</th>
                    <th>名称</th>
                    <th>课时数</th>
                    <th>价格</th>
                    <th width="15%">选择</th>
                </tr>
            </thead>
            <tbody>
                <tr id="course_tr_tpl" class="course_tr_tpl hide">
                    <td class="td-center">%no%</td>
                    <td class="td-center"><a href="/Course/Course/showAction/id/%no%">%cn%</a></td>
                    <td class="td-center">%cl%</td>
                    <td class="td-center">￥%cp%</td>
                    <td class="td-center"><input type="checkbox" name="course_id" value="%no%" /></td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}

{% block footer %}
    <button id="submit-add-course-btn" data-url="{{ path('admin_career_course_plan_add_course') }}" data-id="{{ stage_id }}" data-submiting-text="正在提交" type="button" class="btn btn-primary pull-right">添加</button>
    <button type="button" class="btn btn-link pull-right" data-dismiss="modal">取消</button>
{% endblock %}