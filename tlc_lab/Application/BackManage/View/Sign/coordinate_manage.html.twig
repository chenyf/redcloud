{% extends '@BackManage/Course/layout.html.twig' %}

{% block title %}课程管理 - {{ parent() }}{% endblock %}

{% set script_controller = 'sign/sign_coordinate_manage' %}

{% set menu = 'sign-coordinate' %}

{% block main %}
    <div class="page-header">
        <a class="btn btn-info btn-sm pull-right" href="#modal" data-toggle="modal" data-url="{{ path('admin_sign_coordinate_add') }}">添加签到地点坐标</a>
        <h1>签到地点坐标管理</h1>
    </div>

    <table class="table table-striped table-hover" id="coordinate-table" style="word-break:break-all;">
        <thead>
        <tr>
            <th>ID</th>
            <th width="30%">地点名称</th>
            <th>经度</th>
            <th>纬度</th>
            <th>创建时间</th>
            <th>最近更新时间</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        {% for coordinate in coordinates %}
            {% include '@BackManage/Sign/coordinate-tr.html.twig' %}
        {% else %}
            <tr><td colspan="20"><div class="empty">暂无签到地点坐标记录</div></td></tr>
        {% endfor %}
        </tbody>
    </table>
    {{ web_macro.paginator(paginator) }}

{% endblock %}